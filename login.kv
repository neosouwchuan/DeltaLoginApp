MDNavigationLayout:
  orientation: 'vertical'

  

  ScreenManager:
    id: screen_manager

    Screen:
      name: "tipscreen1"
      MDFloatLayout:
        MDCard:
          size_hint:None,None
          size:300,400
          pos_hint:{"center_x":0.5,"center_y":0.5}
          elevation:10
          padding:10
          spacing:10
          orientation:"vertical"
          Image:
            source: 'deltaupscale.jpg'
            width:200
            id : oneimage
            keep_ratio:True
            allow_stretch: True
          MDLabel:
            text:"Delta BIBO"
            id:welcome_label
            font_size:30
            halign:"center"
            size_hint_y:None
            height:self.texture_size[1]
            #padding_y:15
            font_name:"Helvetica"
          MDTextField:
            id:user
            mode:"round"
            hint_text:"insert 4d"
            icon_right:"account"
            size_hint_x:None
            width:200
            pos_hint:{"center_x":0.5}
            font_size:18
          MDRaisedButton:
            text:"Submit"
            id:butt
            md_bg_color: "#3790B3"
            font_size:12
            pos_hint:{"center_x":0.5}
            on_press: app.logger()
          Widget:
            size_hint_y:None
            height:10

    Screen:
      name: "tipscreen2"
      MDFloatLayout:
        MDCard:
          size_hint:None,None
          size:300,400
          pos_hint:{"center_x":0.5,"center_y":0.5}
          elevation:10
          padding:10
          spacing:10
          orientation:"vertical"
          Image:
            source: 'deltaupscale.jpg'
            width:200
            id:oneimage
            keep_ratio:True
            allow_stretch: True
          MDLabel:
            text:"Generate QR code"
            id:generate_label
            font_size:30
            halign:"center"
            size_hint_y:None
            height:self.texture_size[1]
            #padding_y:15
            font_name:"Helvetica"
          MDRaisedButton:
            text:"Generate QR code"
            id:butt
            md_bg_color: "#3790B3"
            font_size:12
            pos_hint:{"center_x":0.5}
            on_press: app.qrgen()
          Widget:
            size_hint_y:None
            height:10

  MDNavigationDrawer:
    id: nav_drawer
    MDNavigationDrawerMenu:

